{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "sourceMap": true,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators":true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true, 
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
  },
  "exclude": [
    "node_modules"]
}